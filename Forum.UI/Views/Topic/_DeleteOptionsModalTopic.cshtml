@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="modal fade" id="deleteOptionsModal" tabindex="-1" aria-labelledby="deleteOptionConfirmationModal" aria-hidden="true">
    @Html.AntiForgeryToken()
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" id="modalContent">
            <div class="modal-header">
                <h4 class="modal-title">@Localizer["DeleteOptions"]</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h5>@Localizer["PleaseSelectTheDeleteOption"]</h5>
                <input type="radio" name="deleteOption" id="deleteEverything">
                <label for="deleteEverything">@Localizer["DeleteTheTopicWithItsPosts"]</label>
                <br>
                <input type="radio" name="deleteOption" id="transferPosts">
                <label for="transferPosts">@Localizer["DeleteTheTopicButTransferItsPostsToAnotherTopic"]</label>

                <input type="hidden" id="deleteId">

                <div class="mt-3 d-none" id="selectTopicList">
                    <label for="topics"><h5>@Localizer["ChooseATopic"]</h5></label>
                    <select name="topics" id="topics"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                <button id="confirmDeleteOption" class="btn btn-danger">@Localizer["ConfirmDelete"]</button>
            </div>
        </div>
    </div>
</div>