@using System.Globalization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Forum.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Forum</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Community" asp-action="Index">Communities</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Post" asp-action="Index">Posts</a>
                        </li>
                        <li class="nav-item mt-2 mx-2">
                            <input id="selectComm" type="hidden" value="">
                            <select id="commDrop" name="community">
                                <option value="">Select a Community</option>
                            </select>
                        </li>
                        <li class="nav-item mt-2">
                            <input id="selectTop" type="hidden" value="">
                            <select id="topDrop" name="topic">
                                <option value="">Select a Topic</option>
                            </select>
                        </li>
                        <li class="nav-item ms-auto mt-2">
                            <form id="cultureForm">
                                <select id="langChange" name="culture">
                                    <option value="en-US" selected="@(CultureInfo.CurrentCulture.Name == "en-US")">English</option>
                                    <option value="tr-TR" selected="@(CultureInfo.CurrentCulture.Name == "tr-TR")">Türkçe</option>
                                </select>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div id="navbarPostsCont"></div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Forum - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        $(document).on("change", "#langChange", function () {
            let culture = $("#langChange").find(":selected").val();

            $.ajax({
                type: "POST",
                url: "/Home/SetLanguage",
                data: { 
                    culture: culture
                },
                success: function (response) {
                    if (response.success) {
                        console.log(response.message);
                        location.reload();
                    } else {
                        toastr.error("Error: " + response.message);
                    }
                },
                error: function () {
                    toastr.error("Error setting the language.");
                }
            });
        });
    });

    $(document).ready(function () {
        let communities;
        let topics;
        let selectedComm = $("#selectComm");
        let selectedTop = $("#selectTop");

        $.ajax({
            type: "GET",
            url: "/Home/GetCommunitiesTopics",
            dataType: "json",
            success: function (response) {
                if (response.success) {
                    console.log(response.message);
                    displayDropdown(response.communities);
                    communities = response.communities;
                    topics = response.topics;
                } else {
                    toastr.error("Error: " + response.message);
                }
            },
            error: function () {
                toastr.error("Error loading the Communities/Topics.");
            }
        });

        function displayDropdown(communities) {
            var communityDropdown = $("#commDrop");
            var topicDropdown = $("#topDrop");

            communities.forEach(community => {
                var option = document.createElement("option");
                option.value = community.id;
                option.textContent = community.communityName;
                communityDropdown.append(option);
            });
        }

        $(document).on("change", "#commDrop", function () {
            var comm = $(this).find(":selected").val();
            var topicDropdown = $("#topDrop");

            selectedComm.val(comm);
            topicDropdown.html(`<option value="">Select a Topic</option>`);

            topics.forEach(topic => {
                if (topic.communityId == comm) {
                    var option = document.createElement("option");
                    option.value = topic.id;
                    option.textContent = topic.topicName;
                    topicDropdown.append(option);
                }
            });
        });

        $(document).on("change", "#topDrop", function () {
            var top = $(this).find(":selected").val();
            if (!top) return;
            selectedTop.val(top);

            var container = $(".container:first");

            $.ajax({
                type: "GET",
                url: "/Home/ListPosts",
                data: {topicId: top},
                success: function (response) {
                    container.html(response);
                    container.show();
                },
                error: function () {
                    toastr.error("Error loading the Posts.");
                }
            });
        });
    });
</script>