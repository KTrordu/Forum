@model Forum.UI.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Create";
}
<form asp-controller="Post" asp-action="Create" method="post">
	<input type="hidden" asp-for="CommunityName" />
	<input type="hidden" asp-for="TopicName" />

	<div class="border p-3 mt-4">
		<div class="row">
			<h2 class="text-primary">Create a Post</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="CommunityId"></label>
			<select asp-for="CommunityId" asp-items="Model.Communities" class="form-control">
				<option value="">Select a Community</option>
			</select>
			<span asp-validation-for="CommunityId" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="TopicId"></label>
			<select asp-for="TopicId" asp-items="Model.Topics" class="form-control">
				<option value="">Select a Topic</option>
			</select>
			<span asp-validation-for="TopicId" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="PostTitle"></label>
			<input asp-for="PostTitle" class="form-control" />
			<span asp-validation-for="PostTitle" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="PostDescription"></label>
			<textarea asp-for="PostDescription" class="form-control" rows="6" placeholder="Type something..."></textarea>
			<span asp-validation-for="PostDescription" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="ImagePath">Upload Image</label>
			<input type="file" asp-for="ImagePath" class="form-control" accept="image/*"/>
			<span asp-validation-for="ImagePath" class="text-danger"></span>
		</div>
		
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Post" asp-action="Index" asp-route-communityId="@Model.CommunityId" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>