@model Forum.UI.ViewModels.PostListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2 style="color:darkgreen">@Model.CommunityName Posts</h2>

<a asp-controller="Community" asp-action="Index" class="btn btn-dark">Back to communities</a>

<table class="table">
    <thead>
        <tr>
            <th>Post Title</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>@post.PostTitle</td>
                <td>@post.CreatedAt.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>