@model Forum.UI.ViewModels.PostListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2 style="color:darkgreen">@Model.CommunityName <span style="color:darkred">Posts</span></h2>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <a asp-controller="Community" asp-action="Index" class="btn btn-dark">Back to Communities</a>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Post" asp-action="Create" asp-route-communityId="@Model.CommunityId" asp-route-topicId="@Model.TopicId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Post Something
            </a>
        </div>
    </div>
</div>
@foreach (var post in Model.Posts)
{
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Community</th>
            <th>Topic</th>
            <th>Post Title</th>
            <th>Created At</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@post.CommunityName</td>
                <td>@post.TopicName</td>
                <td>@post.PostContent.PostTitle</td>
                <td>@post.CreatedAt.Day.@post.CreatedAt.Month.@post.CreatedAt.Year @post.CreatedAt.DayOfWeek</td>
                <td>
                    <div>
                        <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id" asp-route-communityId="@post.CommunityId" asp-route-topicId="@post.TopicId"
                        style="text-decoration:none; color:navy">
                            <i class="bi bi-pencil-square" style="color:orange"></i> Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div>
                        <a asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id" asp-route-communityId="@post.CommunityId" asp-route-topicId="@post.TopicId"
                        style="text-decoration:none; color:darkred">
                            <i class="bi bi-x-circle" style="color:darkred"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
            <tr>
                @if (!string.IsNullOrEmpty(post.PostContent.ImagePath))
                {
                    <img src="@post.PostContent.ImagePath" alt="@post.PostContent.PostTitle" class="img-fluid" style="max-width:200px; max-height:200px; border-radius:5px;" />
                }
                else
                {
                    <span>No Image</span>
                }
            </tr>
            <tr>
                <td colspan="6" class="text-center">@post.PostContent.PostDescription</td>
            </tr>
    </tbody>
</table>
}