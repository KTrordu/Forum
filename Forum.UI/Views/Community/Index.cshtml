@model IEnumerable<Forum.UI.ViewModels.CommunityViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Community List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Community" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Community
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Community Name
            </th>
            <th>
                Created At
            </th>
            <th>
                Subscription
            </th>
            <th>

            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="15%">
                    <a asp-controller="Post" asp-action="Index" asp-route-communityId="@obj.Id" asp-route-topicId="0" style="text-decoration:none; color:navy">
                        @obj.CommunityName
                    </a>
                </td>
                <td width="15%">
                    @obj.CreatedAt.Day.@obj.CreatedAt.Month.@obj.CreatedAt.Year @obj.CreatedAt.DayOfWeek
                </td>
                <td width="10%">
                    <button class="btn btn-sm subscribe-button @(obj.IsSubscribed ? "bg-danger" : "bg-success")" data-communityId="@obj.Id" style="border:1px solid black;">
                        <span class="bi" id="like-icon-@obj.Id" style="color:white">
                            @(obj.IsSubscribed ? "Unsubscribe" : "Subscribe")
                        </span>
                    </button>
                </td>
                <td width="10%">
                    <a asp-controller="Topic" asp-action="Create" asp-route-communityId="@obj.Id" style="text-decoration:none; color:navy">
                        Create Topic
                    </a>
                </td>
                <td width="10%">
                    <a asp-controller="Post" asp-action="Create" asp-route-communityId="@obj.Id" style="text-decoration:none; color:navy">
                        Create Post
                    </a>
                </td>
                <td width="10%">
                    <div>
                        <a asp-controller="Community" asp-action="Edit" asp-route-id="@obj.Id" style="text-decoration:none; color:navy">
                            <i class="bi bi-pencil-square" style="color:orange"></i> Edit</a>
                    </div>
                </td>
                <td width="10%">
                    <div>
                        <a asp-controller="Community" asp-action="Delete" asp-route-id="@obj.Id" style="text-decoration:none; color:darkred">
                            <i class="bi bi-x-circle" style="color:darkred"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.querySelectorAll(".subscribe-button").forEach(button => {
        var communityId = button.getAttribute("data-communityId");
        var icon = document.getElementById(`like-icon-${communityId}`);

        if (icon.innerHTML.trim() === "Unsubscribe") button.classList.add("bg-danger");
        else button.classList.add("bg-success");

        button.addEventListener("click", function () {

            fetch(`/Community/SubscribeToCommunity?communityId=${communityId}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" }
            })
            .then(response => response.json())
            .then(data => {
                if (data.isSubscribed) {
                    icon.innerHTML = "Unsubscribe";
                    button.classList.remove("bg-success");
                    button.classList.add("bg-danger");
                } else {
                    icon.innerHTML = "Subscribe";
                    button.classList.remove("bg-danger");
                    button.classList.add("bg-success");
                }
            });
        });
    });
</script>