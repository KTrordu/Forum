@model Forum.UI.ViewModels.CommunityViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create";
}
<form asp-controller="Community" asp-action="Create" method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">@Localizer["CreateCommunity"]</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="CommunityName">@Model.CommunityNameLabel</label>
			<input asp-for="CommunityName" class="form-control" />
			<span asp-validation-for="CommunityName" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">@Localizer["Create"]</button>
		<a asp-controller="Community" asp-action="Index" class="btn btn-secondary" style="width:150px">
			@Localizer["BackToList"]
		</a>
	</div>
</form>